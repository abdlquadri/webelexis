.row
    .col-sm-12.col-md-6
        .panel-heading
            .form-inline
                button.btn.glyphicon.glyphicon-circle-arrow-left(data-bind="click: yesterday" data-toggle="tooltip" title="Zum vorherigen Tag gehen")
                button.btn.glyphicon.glyphicon-circle-arrow-down(data-bind="click: today" data-toggle="tooltip" title="auf Heute gehen")
                button.btn.glyphicon.glyphicon-circle-arrow-right(data-bind="click: tomorrow" data-toggle="tooltip" title="Zum nächsten Tag gehen")            
                input(type="text" style="margin-left:10px" data-toggle="tooltip" title="Klicken um den Kalender zu öffnen" data-bind='datepicker: {dateFormat: "dd.mm.yy", dayNamesMin: tage, monthNames: monate, monthNamesShort: monateKurz, onSelect: dateChanged}, value: now')
                select(data-bind="options: resources, optionsText: 'display', value: resource, event: {change: loadAppointments}")
        .panel-body
            .row(data-bind="foreach: appointments")
                .well.well-sm.col-xs-12.col-sm-6.col-md-4.col-lg-2(data-bind="text: displayText, css: displayClass, click: $parent.expand")
                form.form.row(data-bind="if:expanded, submit: $parent.update")
                    .form-group.col-xs-12.col-sm-6.col-md-4
                        label(for="lastname") Name
                        input.form-control#lastname(data-bind="value: lastName")
                    .form-group.col-xs-12.col-sm-6.col-md-4
                        label(for="firstname") Vorname
                        input.form-control#firstname(data-bind="value: firstName")
                    .form-group.col-xs-12.col-sm-6.col-md-4
                        label(for="birthdate") Geburtsdatum
                        input.form-control#birthdate(data-bind="value: patientID")
                    button.btn.btn-primary(type="submit") Senden
                    button.btn.btn-default(data-bind="click: $parent.collapse") Abbrechen