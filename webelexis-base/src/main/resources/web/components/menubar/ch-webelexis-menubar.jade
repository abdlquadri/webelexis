nav.navbar.navbar-default
    .navbar-header
        button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#webelexis-main-collapsed")
            span.sr-only Menu erweitern
            span.glyphicon.glyphicon-menu-hamburger
        a.navbar-brand(href="http://github.com/rgwch/webelexis")
            img(alt="webelexis" src="img/elexis_logo.png" style="width: 30px; height: 30px")
    .collapse.navbar-collapse#webelexis-main-collapsed
        ul.nav.navbar-nav#mainmenu(data-bind="foreach: menuItems")
            li
                a(data-bind="attr: {href: baseUrl}, text: $index()+title")
        form.navbar-form.navbar-right#loginform(data-bind="submit: doLogin")
            .form-group
                label(for="username").sr-only Benutzername
                input.input-sm.form-control#username(type="text" placeholder="Benutzername" data-bind="unam")
            .form-group
                label(for="password").sr-only Passwort
                input.input-sm.form-control#password(type="password" placeholder="Passwort" data-bind="upwd")
            button#navbar-button.btn.btn-default.btn-sm.navbar-btn(type="submit") Anmelden
            p.red.hidden#badlogin-text falscher Name oder falsches Passwort
            a.hidden#logged-in-text(href="#" role="button" data-bind="click: doLogout") Abmelden
        
     