mixin createGroup(item,range)
  .col-xs-3
    span(data-bind="text: $parent.displayText(#{item}.min), css: {red: $parent.outOfRange(#{range},#{item}.min)}" style="font-size:smaller")
    span.abstand(data-bind="text: $parent.displayText(#{item}.avg), css: {red: $parent.outOfRange(#{range},#{item}.avg)}" style="font-size:larger")
    span(data-bind="text: $parent.displayText(#{item}.max), css: {red: $parent.outOfRange(#{range},#{item}.max)}" style="font-size:smaller")
          
