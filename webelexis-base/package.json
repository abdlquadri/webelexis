{
  "name": "webelexis-base",
  "version": "0.0.3",
  "description": "base module for webelexis",
  "author": "weirich@elexis.ch",
  "private": true,
  "license": "EPL",
  "scripts": {
    "clean": "rimraf dist",
    "build:client": "npm run create:dirs && (npm run compile:jade && r.js -o build-debug.js)",
    "create:dirs": "mkdirp dist/web",
    "compile:jade": "jade src/main/resources/web -o dist/web",
    "compile:java": "javac -cp \"${VERTX_HOME}/lib/*\" src/main/java/ch/rgw/vertx/*.java src/main/java/ch/webelexis/agenda/*.java -d dist",
    "preverticle": "npm run compile:java && cp src/main/resources/webelexis-core.js dist",
    "verticle": "cd dist && vertx run webelexis-core.js",
    "start": "npm run build:client && npm run verticle",
    "env": "env"
  },
  "devDependencies": {
    "jade": ">=1.9.0",
    "requirejs": ">=2.1.16",
    "bootstrap": ">=3.3.2",
    "rimraf": "latest",
    "mkdirp": "latest",
    "ncp": "latest"
  }
}
