{
    "name": "webelexis-base",
    "version": "0.0.1-beta",
    "description": "base module for webelexis",
    "author": "weirich@elexis.ch",
    "private": true,
    "license": "EPLv2",
    "scripts": {
        "clean": "rm -r dist",
        "build:client": "npm run create:dirs && npm run compile:jade && r.js -o build-debug.js", 
        "create:dirs": "mkdir -p dist/web",
        "copy:css": "cp -R src/main/resources/web/css dist/web",
        "copy:fonts": "cp -R src/main/resources/web/fonts dist/web",
        "copy:lib": "cp -R src/main/resources/web/lib dist/web",
        "copy:img": "cp -R src/main/resources/web/img dist/web",
        "prepare" : "npm run create:dirs && npm run copy:css && npm run copy:fonts && npm run copy:lib && npm run copy:img",
        
        "compile:jade": "jade src/main/resources/web -o dist/web",
        "precompress:js": "mkdir -p dist/web/app",
        "postcompress:js": "mv src/main/resources/web/app/*-min.js dist/web/app",
        "verticle": "vertx run webelexis-core.js",
        "run": "jade && js && verticle",
        "env": "env"
    },
    "devDependencies": {
        "uglify": ">=2.0.0",
        "jade": ">=1.9.0"
    }
}