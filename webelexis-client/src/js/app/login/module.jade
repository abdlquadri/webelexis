.col-md-6.col-md-offset-3.col.xs-12
  .panel.panel-info#login-head
    .panel-heading
      .panel-title
        h3(data-bind="text: msg('heading')")
      p#login-message(data-bind="text: msg('headmsg')")
    .panel-body
      .row
        .col-xs-6
          form.form(data-bind="submit: dologin")
            .form-group
              label(for="username") E-Mail
              input.form-control#username(type="text" data-bind="value: uname")
            .form-group
              label(for="password") Passwort
              input.form-control#password(type="password" data-bind="value: pwd")
            button.btn.btn-primary#loginbutton(type="submit" disabled="disabled" style="width: 100%" data-bind="text:" +
            " msg('waitForServer')")
            button.btn.btn-default(type="button" style="width: 100%" data-bind="click: forgotPwd, text: msg('forgotpwd')")
        .col-xs-6(data-bind="if: hasGoogle")
          img.img.img-responsive.center-block#gbutton(src="images/Blue_signin_Long_normal_32dp_v3.png"
          data-bind="click: googleLogin, event: {mouseover: google_mouseOver, mouseout: google_mouseOut}")
    .panel-footer
      .center-block(style="width:100%")
        a.btn(href="#addpatient" data-bind="text: msg('noaccount')" style="width:100%;")

