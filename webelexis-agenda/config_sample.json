// Example JSON config file for webelexis 
// Note: comments are not part of the JSON spec. Some parsers will reject files with comments,
// so it is recommended to remove these comments in your active conf.json.
// Check the correctness of your config with http://jsonlint.com
{
    // config for the mod-mongo-persistor (https://github.com/vert-x/mod-mongo-persistor)
  "mongo" : {
  	"address" : "ch.webelexis.nosql", // do not change this
    "host": "localhost",			  // address of your mongo server. defaults to 'localhost'					
    "port": <port>,					  // optional
    "username": <username>,			  // optional
    "password": <password>,			  // optional
    "db_name": "webelexis",			  // do not change			 
    "pool_size": <pool_size>,		  // optional
    "use_ssl": <bool>,				  // only necessary, if access from outside
    "read_preference": <e.g. "nearest" or "primary" etecetera>,  // optional
    "use_mongo_types": <bool>,		  // optional; "false" is recommended
    "socket_timeout": <default 60000>, // optional
    "auto_connect_retry": <default true>   // optional, "true" recommended
  },
  
    // config for mod-mysql-postgresql (https://github.com/vert-x/mod-mysql-postgresql)
  "sql" : {
  
  	"address" : "ch.webelexis.sql",  // do not change this
  	"connection" : <MySQL|PostgreSQL>,
  	"host" : <your-host>,
  	"port" : <your-port>,
  	"maxPoolSize" : <maximum-number-of-open-connections>,  // optional
  	"username" : <your-username>,
  	"password" : <your-password>,
  	"database" : <name-of-your-database>			// usually 'elexis'
	}, 
	
    // config for mod-auth-mgr (https://github.com/vert-x/mod-auth-mgr)
"auth" : {
	"address": "ch.webelexis.auth",				// do not change this
    "user_collection": "users",					// do not change this
    "persistor_address": "ch.webelexis.nosql",  // do not change this
    "session_timeout": 30000					// optional
	},
	
    // config for webelexis-Agenda
"agenda":{
		"resource":"gerry",			// which calendar resource should be used 
		"timeSlot": 30,				// how long should an appointment be
		"maxPerDay": 4,				// maximum Number of appnts. per day via this app
		"apptType" : "Normal",		// "TerminTyp" for our appointments
		"apptState": "Via Internet"  // "TerminStatus" for our appointments
	},
    
    // config for the EventBus-Websocket bridge and the html server
"bridge" :{
		"webroot": "web",	// Use this for the deployed module	(or just leave this entry away)
		// "webroot": "src/main/resources/web",  // use this for "gradle runMod" within the build environment
		"port": 2015,     // default port for webelexis
		"inOK" : [        // allowed inbound messages (all other will be blocked)
		{"address": "ch.webelexis.auth.login"},
		{"address": "ch.webelexis.auth.logout"},
		{"address": "ch.webelexis.agenda.appointments"},
		{"address": "ch.webelexis.agenda.insert"}
		],                // allowed outbound messages
		"outOK" : [
		]
	},
    // Global identification primarly for debugging purposes to see, which config is active.
	"id": "this is an identification for this config"
}